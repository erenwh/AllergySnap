<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_gradient"
    tools:context=".ResetPasswordActivity">

    <TextView
        android:id="@+id/reset_password_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif-light"
        android:text="Please enter the email associated with your account:"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="35sp" />

    <EditText
        android:id="@+id/reset_password_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="15dp"
        android:ems="10"
        android:layout_below="@+id/reset_password_message"
        android:hint="Email"
        android:textColorHint="@color/colorText"
        android:fontFamily="sans-serif-light"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/reset_password_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="180dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorProfile"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/reset_password_email"
        android:text="Reset Password"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>