<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_gradient"
    tools:context=".ProfileDetailActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_weight="1" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_picture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_profile_default" />

    <Button
        android:id="@+id/profile_detail_change_photo_button"
        style="@style/Widget.AppCompat.ActionButton.CloseMode"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_picture"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorText"
        android:text="Change Photo" />

    <LinearLayout
        android:layout_below="@id/profile_detail_change_photo_button"
        android:weightSum="2"
        android:id="@+id/name_layout"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<ImageView-->
            <!--android:layout_width="70dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_weight="1"-->
            <!--android:src="@drawable/ic_profile_detail_name" />-->

        <EditText
            android:id="@+id/first_name_text"
            android:hint="First Name"
            android:fontFamily="sans-serif-light"
            android:textColorHint="@color/colorText"
            android:inputType="textPersonName"
            android:backgroundTint="@color/colorText"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/last_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/colorText"
            android:fontFamily="sans-serif-light"
            android:hint="Last Name"
            android:textColorHint="@color/colorText" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/name_layout"
        android:id="@+id/email_layout"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/colorText"
            android:fontFamily="sans-serif-light"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/colorText" />

        <EditText
            android:id="@+id/username_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/colorText"
            android:fontFamily="sans-serif-light"
            android:hint="Username"
            android:textColorHint="@color/colorText" />

        <!--<ImageView-->
            <!--android:src="@drawable/ic_profile_detail_email"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_width="70dp"-->
            <!--android:layout_height="50dp" />-->

    </LinearLayout>


    <LinearLayout
        android:layout_below="@id/email_layout"
        android:id="@+id/pw_layout"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/password_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/colorText"
            android:fontFamily="sans-serif-light"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="@color/colorText" />

        <!--<ImageView-->
        <!--android:src="@drawable/ic_profile_detail_email"-->
        <!--android:layout_weight="1"-->
        <!--android:layout_width="70dp"-->
        <!--android:layout_height="50dp" />-->

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/pw_layout"
        android:id="@+id/pw_conf_layout"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/password_conf_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/colorText"
            android:fontFamily="sans-serif-light"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColorHint="@color/colorText" />

        <!--<ImageView-->
        <!--android:src="@drawable/ic_profile_detail_email"-->
        <!--android:layout_weight="1"-->
        <!--android:layout_width="70dp"-->
        <!--android:layout_height="50dp" />-->

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/pw_conf_layout"
        android:id="@+id/dob_layout"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/dob_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/colorText"
            android:fontFamily="sans-serif-light"
            android:hint="Date of Birth (dd-mm-yyyy)"
            android:textColorHint="@color/colorText"
            android:inputType="date"
            />
    </LinearLayout>


    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/deactivate_button"
        android:background="@color/colorProfile"
        android:fontFamily="sans-serif-light"
        android:text="Submit"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/deactivate_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@color/colorAlert"
        android:fontFamily="sans-serif-light"
        android:text="Deactivate"
        android:textColor="@android:color/background_light"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>